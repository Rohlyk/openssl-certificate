export KEY_DIRECTORY=keys
export INDEX_PATH=index
export OTHER_PATH=other

COMMON_NAME_PATH=$OTHER_PATH/common-name

. script/openssl-exports

CERTIFICATE_AUTHORITY=certificate-authority
CERTIFICATE_AUTHORITY_PATH=$KEY_DIRECTORY/$CERTIFICATE_AUTHORITY
CERTIFICATE_AUTHORITY_BASE=$CERTIFICATE_AUTHORITY_PATH/$CERTIFICATE_AUTHORITY
CERTIFICATE_AUTHORITY_KEY=$CERTIFICATE_AUTHORITY_BASE.key
CERTIFICATE_AUTHORITY_CERTIFICATE=$CERTIFICATE_AUTHORITY_BASE.crt

OPENSSL_DAYS=365
OPENSSL_RSA_BITS=1024
OPENSSL_CONFIGURATION=configuration/openssl.conf
