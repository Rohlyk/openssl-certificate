. script/server-variables

rm -rf $SERVER_PATH
mkdir -p $SERVER_PATH

rm -rf $INDEX_PATH
mkdir -p $INDEX_PATH
touch $INDEX_PATH/index.txt
touch $INDEX_PATH/index.txt.attr

rm -rf $OTHER_PATH
mkdir -p $OTHER_PATH
echo 01 > $OTHER_PATH/serial

openssl genrsa -out $SERVER_KEY $OPENSSL_RSA_BITS
chmod 600 $SERVER_KEY
echo -e "\n\n\n\n\n\n" | openssl req -new -x509 -nodes -sha1 -config $OPENSSL_CONFIGURATION -days $OPENSSL_DAYS -key $SERVER_KEY -out $SERVER_CERTIFICATE
echo
